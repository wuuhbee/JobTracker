@model IEnumerable<JobTracker.Models.Job>

@{
    ViewData["Title"] = "All Applications";
}

<h1>@ViewData["Title"]</h1>

<head>
    <link rel="stylesheet" href="~/css/Jobs.css" />
</head>

<p>
    <a asp-action="Create" class="btn primary-button btn-sm"><i class="fa fa-plus"></i>Add New Application</a> |
    <a asp-action="AddStatus" class="btn secondary-button btn-sm"><i class="fa fa-plus"></i>Add New Status Type</a>
</p>
<hr />
<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">@Html.DisplayNameFor(model => model.JobTitle)</a>
                @if (ViewData["NameSortParam"].ToString() == "name_desc")
                {
                    <i class="fa fa-arrow-up"></i>
                }
                else
                {
                    <i class="fa fa-arrow-down"></i>
                }
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParam"]">@Html.DisplayNameFor(model => model.Statuses.StatusName)</a>
                @if (ViewData["StatusSortParam"].ToString() == "stat_desc")
                {
                    <i class="fa fa-arrow-up"></i>
                }
                else
                {
                    <i class="fa fa-arrow-down"></i>
                }
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]">@Html.DisplayNameFor(model => model.DateApplied)</a>
                @if (ViewData["DateSortParam"].ToString() == "date_desc"){
                    <i class="fa fa-arrow-up"></i>
                }
                else{
                    <i class="fa fa-arrow-down"></i>
                }
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statuses.StatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateApplied)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.JobId" class="btn primary-button btn-sm"><i class="fa fa-pencil"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.JobId" class="btn secondary-button btn-sm"><i class="fa fa-navicon"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.JobId" class="btn fail-button btn-sm"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>
