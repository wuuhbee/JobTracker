@model JobTracker.Models.Job

<head>
    <link rel="stylesheet" href="~/css/Jobs.css" />
</head>

@{
    ViewData["Title"] = "Delete Job Application";
}
<dialog open>
    <h2 style="text-align:center">Delete Job Application</h2>

    <h4>Are you sure you want to delete this?</h4>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.JobTitle)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.JobTitle)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CompanyName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CompanyName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Statuses)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Statuses.Id)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateApplied)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateApplied)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="JobId" />
            <input type="submit" value="Delete" class="btn fail-button btn-sm" /> |
            <a asp-action="Index" class="btn secondary-button btn-sm"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </form>
    </div>
</dialog>
