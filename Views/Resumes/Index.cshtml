@model IEnumerable<JobTracker.Models.Resume>

@{
    ViewData["Title"] = "All Resumes";
}

<h1>@ViewData["Title"]</h1>

<head>
    <link rel="stylesheet" href="~/css/Resumes.css" />
</head>

<p>
    <a asp-action="Create" class="btn primary-btn btn-sm"><i class="fa fa-plus"> </i>Add a Resume</a>
</p>
<table class="table table-bordered table-responsive-md">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]">@Html.DisplayNameFor(model => model.DateAdded)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">@Html.DisplayNameFor(model => model.FileName)</a>
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.FilePath)
            </td> *@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                @* Add button to open the file and next to it a button to direct to AI resume*@
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
